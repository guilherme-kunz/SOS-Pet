<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@drawable/constraint_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adoptionItemImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adoptionItemRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/gray_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/adoptionItemImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pastor AlemÃ£o" />

    <TextView
        android:id="@+id/adoptionItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/adoptionItemImage"
        app:layout_constraintTop_toBottomOf="@+id/adoptionItemRace"
        tools:text="Frederico" />

    <TextView
        android:id="@+id/adoptionItemColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/adoptionItemImage"
        app:layout_constraintTop_toBottomOf="@+id/adoptionItemName"
        tools:text="Preto com Marrom" />

    <TextView
        android:id="@+id/adoptionItemPorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/adoptionItemImage"
        app:layout_constraintTop_toBottomOf="@+id/adoptionItemColor"
        tools:text="Grande" />

    <TextView
        android:id="@+id/adoptionItemRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/adoptionItemImage"
        app:layout_constraintTop_toBottomOf="@+id/adoptionItemPorte"
        tools:text="18/11/2022 11:38" />


</androidx.constraintlayout.widget.ConstraintLayout>